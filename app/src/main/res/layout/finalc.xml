<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#ffffff">

    <ImageView
        android:id="@+id/user_single_image"
        android:layout_width="102dp"
        android:layout_height="153dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="-11dp"
        android:src="@drawable/something_xxxhdpi" />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="22dp"
        android:id="@+id/text"
        >


        <TextView
            android:id="@+id/user_single_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"


            android:text="Chemistry : JEE Main"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_single_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_single_name"
            android:padding="2dp"

            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:ellipsize="none"
            android:lineSpacingExtra="1sp"
            android:lines="3"
            android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type  and scrambled it to make a type "
            android:textColor="#666666"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="5dp"
        android:text="87 Videos"
        android:textColor="#999999"
        android:textSize="10sp" />

    <Button
        android:id="@+id/textView4"
        android:layout_width="57dp"
        android:layout_height="15dp"

        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="116dp"

        android:layout_marginRight="116dp"
        android:background="@drawable/custom_buttom"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:padding="1dp"
        android:text="Free Demo"
        android:textAllCaps="false"
        android:textColor="#0284b3"
        android:textSize="9sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button"
        android:layout_width="57dp"
        android:layout_height="15dp"

        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:background="@drawable/custom_button_green"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Premium"
        android:textAllCaps="false"
        android:textColor="#00cd66"
        android:textSize="9sp"
        android:textStyle="normal" />


</RelativeLayout>