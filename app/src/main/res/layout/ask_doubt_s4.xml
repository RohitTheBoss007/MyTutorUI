<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f4f7">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="16dp"
            android:layout_marginTop="28sp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23.8dp"
            android:layout_toRightOf="@+id/back"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#444444"
            android:lineSpacingExtra="2sp"
            android:text="Physics Doubt"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/rl1"
        android:background="#ffffff"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/mentorsimg"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/group_3"/>

        <TextView
            android:layout_toRightOf="@id/mentorsimg"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#444444"
            android:lineSpacingExtra="8sp"
            android:text="+1.1K Tutors are here to help you"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#c9c9c9"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:text="@string/doubtInfo"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"

            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl2"
        android:background="#ffffff"
        android:layout_marginTop="7dp"
        >


        <ImageView
            android:id="@+id/cam"
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="92dp"
            android:src="@drawable/camera"/>

        <TextView
            android:id="@+id/txt_photo"
            android:layout_below="@+id/cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="9dp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="93dp"
            android:textStyle="normal"
            android:textColor="#444444"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:text="Photo"/>

        <ImageView
            android:id="@+id/pen"
            android:layout_toRightOf="@id/cam"
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="108dp"
            android:src="@drawable/i_edit"/>

        <TextView
            android:layout_below="@id/pen"
            android:layout_toRightOf="@id/txt_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="109dp"
            android:textStyle="normal"
            android:textColor="#444444"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:text="Text"/>
w
    </RelativeLayout>

</RelativeLayout>