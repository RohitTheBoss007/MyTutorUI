                    </LinearLayout>

                </HorizontalScrollView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/hsv_mentors"
                    android:background="@drawable/bottom_margin_only"
                    android:id="@+id/ll_video_recent"
                    android:orientation="vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/rl_live_video"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/iv_live_icon"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/live_classes_red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:layout_toRightOf="@+id/iv_live_icon"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:textColor="#444444"
                            android:layout_marginLeft="16dp"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="22sp"
                            android:text="Live Videos"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:id="@+id/tv_live_classes_view_all"
