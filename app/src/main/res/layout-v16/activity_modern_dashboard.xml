                <TextView
                    android:id="@+id/tv_classroom_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:text="Classroom"
                    android:textAlignment="center"
                    android:textColor="#888888"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight=".2"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/group_10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Mentorship"

                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_quiz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight=".2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_quiz"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_above="@+id/tv_quiz_selection"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/bulb_63" />

                <TextView
                    android:id="@+id/tv_quiz_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:text="Quiz"
                    android:textAlignment="center"
                    android:textColor="#888888"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_doubt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight=".2"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_doubt"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_above="@+id/tv_doubt_selection"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/doubt" />

                <TextView
                    android:id="@+id/tv_doubt_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="4dp"
                    android:text="Ask Doubt"
                    android:textAlignment="center"
                    android:textColor="#888888"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_mentorship"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mentorship"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/group_10" />

            <TextView
                android:id="@+id/tv_mentorship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Mentorship"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="12dp" />
        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>
<include layout="@layout/side_menu_stuff"/>
